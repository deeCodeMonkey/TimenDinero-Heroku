<h4 style="color: darkslategray">New Client Billing Information</h4>
<h6>{{errors}}</h6>
<form method="post" action="/company/add" 
enctype="multipart/form-data">
<!--enctype attribute used for uploading images-->
    <div class="form-group">
        <div class="form-group">
            <label>Client ID</label>
            <input type="text" class="form-control" name="client_id" placeholder="Account Number" value="{{id}}">
        </div>
        <label>Client Name</label>
        <input type="text" class="form-control" name="company_name" placeholder="Company Name" value="{{name}}">
        <div class="form-group">
            <label>Contact Person</label>
            <input type="text" class="form-control" name="contact_person" placeholder="Individual" value="{{person}}">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email_address" placeholder="Email" value="{{email}}">
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input type="tel" class="form-control" name="phone" placeholder="xxx-xxx-xxxx" value="{{phone}}" required
           pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
        </div>
        <div class="form-group">
            <label>Mailing Address</label>
            <input type="text" class="form-control" name="mailing_address" placeholder="Mailing Address" value="{{mailing}}">
        </div>
    </div>

    <div class="form-group">
        <label>Client Logo/Image</label>
        <input type="file" class="form-control" name="logo">
    </div>
    <button type="submit" class="button hollow"><strong>Add New Client</strong></button>
</form>