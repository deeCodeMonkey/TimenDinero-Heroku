<h4 style="color: darkslategray">Edit Client Billing Information</h4>

<form method="post" action="/company/save" 
enctype="multipart/form-data">
    <input type="hidden" name="client_id" value="{{client.client_id}}">

<!--enctype attribute used for uploading images-->
    <div class="form-group">
        <div class="form-group">
            <label>Client ID</label>
            <input type="text" readonly="readonly" value="{{client.client_id}}">
        </div>
        <label>Company Name</label>
        <input type="text" class="form-control" name="company_name" placeholder="Company Name" value="{{client.company_name}}">
        <div class="form-group">
            <label>Contact Person</label>
            <input type="text" class="form-control" name="contact_person" placeholder="Individual" value="{{client.contact_person}}">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email_address" placeholder="Email" value="{{client.email_address}}">
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input type="tel" class="form-control" name="phone" placeholder="Phone Number" value="{{client.phone}}" required
           pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
        </div>
        <div class="form-group">
            <label>Mailing Address</label>
            <input type="text" class="form-control" name="mailing_address" placeholder="Physical Address" value="{{client.mailing_address}}">
        </div>
    </div>

    <div class="form-group">
        <label>Client Logo/Image</label>
        <input type="file" class="form-control" name="logo">
    </div>
    <button type="submit" class="button hollow"><strong>Submit</strong></button>
</form>